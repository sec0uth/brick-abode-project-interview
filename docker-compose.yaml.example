version: "3.8"

services:
  juniper-dev:
    build: ./juniper/
    working_dir: /juniper/
    volumes:
      - ./juniper:/juniper:Z,ro
      - ~/.ssh/config:/root/.ssh/config:Z,ro

    ## ssh public key authentication
    #  - ~/.ssh/juniper_key:/root/.ssh/id_rsa:Z,ro

  ansible-dev:
    build: ./ansible/
    working_dir: /ansible/
    volumes:
      - ./ansible:/ansible:Z,ro

    ## ssh public key authentication
    #  - ~/.ssh/ansible_key:/root/.ssh/id_rsa:Z,ro
